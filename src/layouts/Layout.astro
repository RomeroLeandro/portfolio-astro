---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-white">
    <div class="fixed left-0 top-0 h-full w-full -z-10">
      <div
        class="absolute -z-10 w-full h-full items-center [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
      >
      </div>
      <div class="content relative mx-auto h-screen w-full max-w-7x1 px-6">
        <Header />
        <slot />
      </div>
    </div>
  </body>
</html>
<style is:global>
  :root {
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  .content {
    overflow-y: scroll;
  }
</style>
