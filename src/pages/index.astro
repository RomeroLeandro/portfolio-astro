---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import LinkedinIcon from "../icons/Linkedin.astro";
import GithubIcon from "../icons/Github.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../icons/BriefCase.astro";
---

<Layout title="Welcome to Astro.">
  <main class="">
    <SectionContainer class="py-44 pb-32">
      <h1 class="text-5xl font-bold pb-8">
        Hola, Soy <span class="text-violet-600">Leandro Romero</span>
      </h1>
      <h2 class="text-xl lg:text-2xl text-balance max-w-[600px] leading-3">
        +1 a√±o de experiencia. <span class="text-violet-300"
          >Desarrollador Fullstack</span
        >. <span class="text-cyan-300">De Buenos Aires, Argentina.</span>
        <span class="text-yellow-100">Especializado en aplicaciones web.</span>
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <Button>
          <LinkedinIcon class="size-4" /> Linkedin
        </Button>
        <Button>
          <GithubIcon class="size-4" /> Github
        </Button>
      </nav>
    </SectionContainer>
    <SectionContainer>
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <BriefCase class="size-7" />
         Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
  </main>

  <style></style>
</Layout>
