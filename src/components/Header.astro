---
import Document from "../icons/Document.astro";
import GithubIcon from "../icons/Github.astro";
import LinkedinIcon from "../icons/Linkedin.astro";
---

<header
  id="header"
  class={`
    flex items-center
    py-3
    sticky top-0
    w-full
    z-1
    text-white
  `}
>
  <nav
    class={`
        px-3
        flex flex-row justify-evenly items-center
        w-full
      `}
  >
    <img class="size-8 rounded-full" src="/profile.webp" alt="" />
    <ul class="flex flex-row justify-center gap-6">
      <li class="hover:text-violet-500 text-lg">
        <a href="#inicio">Inicio</a>
      </li>
      <li class="hover:text-violet-500 text-lg">
        <a href="#inicio">Sobre mi</a>
      </li>
      <li class="hover:text-violet-500 text-lg">
        <a href="#experiencia">Experiencia</a>
      </li>
      <li class="hover:text-violet-500 text-lg">
        <a href="#proyectos">Proyectos</a>
      </li>
      <li class="hover:text-violet-500 text-lg">
        <a href="#habilidades">Habilidades</a>
      </li>
      <li class="hover:text-violet-500 text-lg">
        <a href="#contacto">Contacto</a>
      </li>
    </ul>
    <ul class="flex flex-row gap-3 justify-center">
      <li class="hover:text-violet-500">
        <a href="http://" target="_blank" rel="noopener noreferrer"
          ><GithubIcon class="size-5" /></a
        >
      </li>
      <li class="hover:text-violet-500">
        <a href="http://" target="_blank" rel="noopener noreferrer"
          ><LinkedinIcon class="size-5" /></a
        >
      </li>
      <li class="hover:text-violet-500">
        <a href="http://" target="_blank" rel="noopener noreferrer"
          ><Document class="size-5" /></a
        >
      </li>
    </ul>
  </nav>
</header>
