---
import CodeIcon from "../icons/Code.astro";
import GithubIcon from "../icons/Github.astro";
import Button from "./Button.astro";
import { PROJECTS } from "../database/projects";
---

{
  PROJECTS.filter((proyect) => proyect.important === true).map(
    ({ image, title, description, tags, link, github }) => (
      <>
        <article class="flex flex-row pb-12 gap-6">
          <div>
            <img
              loading="lazy"
              class="rounded-3xl  shadow-2xl shadow-white/10 aspect-video min-w-[300px] w-[300px] h-[200px]"
              src={image}
              alt={`Captura de pantalla del proyecto ${image}`}
            />
            <nav class="flex flex-row justify-center items-center gap-3 pt-4">
              <Button href={github} class="bg-violet-700">
                <GithubIcon class="size-4" /> Repositorio
              </Button>
              <Button href={link}>
                <CodeIcon /> Sitio web
              </Button>
            </nav>
          </div>
          <div class="max-w-[500px]">
            <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
              {title}
            </h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2 flex-wrap">
              {tags.map((tag) => (
                <li class="pb-2">
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>
          </div>
        </article>
      </>
    )
  )
}
<a href="/proyects">Ver todos</a>

<style>
  .button {
    position: absolute;
    top: 50%;
    right: 50%;
    transform: translate(50%, -50%);
  }
</style>
